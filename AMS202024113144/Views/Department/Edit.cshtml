@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model AMS202024113144.Models.Department
@using AMS202024113144.Models
@inject ManageDbContext _context
@{
    ViewData["Title"] = "修改部门";
    var members = _context.Members.ToList();
}

<div class="container mt-5 mb-5">
    <h1>修改部门</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Did" />
                <div class="form-group">
                    <label asp-for="Dname" class="control-label"></label>
                    <input asp-for="Dname" class="form-control" />
                    <span asp-validation-for="Dname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <!--类别-->
                    <label asp-for="Mid" class="control-label"></label>
                    <select asp-for="Mid" class="form-select" style="width:50%">
                        @foreach (var item in members)
                        {
                            <option value="@item.Mid">@item.Name</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" value="提交修改" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>


