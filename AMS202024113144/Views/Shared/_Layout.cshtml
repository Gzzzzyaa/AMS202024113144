<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Management-@ViewData["Title"]</title>
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
</head>
<body>
    <!--页首及导览区块-->
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3" style="background-color:saddlebrown;">
        <div class="container">
            <a class="navbar-brand" href="/Home/Index">AssetsMgm</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-light" href="/Home/Index">首页</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" href="/Home/Query">相关查询</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" href="/Member/MemberIndex">员工管理</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" href="/Category/CategoryIndex">资产类别管理</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" href="/Department/DepartmentIndex">部门管理</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" href="/Asset/AssetIndex">资产管理</a>
                    </li>
                </ul>
                @{
                    if (@User.Identity.Name != null)
                    {
                        <span style="color:white">@User.Identity.Name 欢迎登录!</span>
                        <a href="@Url.Action("Logout","Home")" style="color:yellow">[注销]</a>
                    }
                }
            </div>
        </div>
    </nav>
    <!--页首及导览区块结束-->
    <!--内容区块-->
    <div>
        @RenderBody()
    </div>
    <!--内容区块结束-->
    <!--页脚区块-->
    <footer class="border-top border-bottom mb-3" style="background-color:azure;">
        <div class="container mt-3 mb-3">
            &copy; 2023 - [AssetsMgm] - 网站管理:郭小阳 - 欢迎使用
        </div>
    </footer>
    <!--页脚区块结束-->

</body>
</html>
