@model IEnumerable<AMS202024113144.Models.Member>
@{
    ViewData["Title"] = "员工列表";
}
<!--margin-top:3-->
<div class="container mt-3 mb-3">
    <h1>员工列表</h1>
    <div class="row">
        <div>
            <form method="post" action="Query?choice&&keyword">
                <select class="form-select" name="choice" style="width:25%" aria-label="Default select example">
                    <option selected value="0">选择你需要的查询</option>
                    <option value="1">姓名</option>
                    <option value="2">联络电话</option>
                    <option value="3">角色</option>
                    <option value="4">部门名称</option>
                </select>
                <div class="input-group mb-3" style="width:25%">
                    <input type="text" style="width:200px" name="keyword" class="form-control" placeholder="请输入关键词" aria-label="请输入关键词" aria-describedby="button-addon2">
                    <button class="btn btn-outline-secondary" type="submit" style="color:white;background-color:saddlebrown" id="button-addon2">查询</button>
                </div>

            </form>
        </div>
    </div>
    <hr />
    <a class="btn" href="/Member/Create" role="button" style="color:white;background-color:saddlebrown">新 增</a>
    @{
        if (TempData["Result"] != null)
        {
            <span style="color:red">操作结果==> @TempData["Result"]</span>
        }
    }
    <table class="table table-hover">
        <thead class="table-light">
            <tr>
                <td>员工编号</td>
                <td>密码</td>
                <td>姓名</td>
                <td>联络电话</td>
                <td>角色</td>
                <td>部门名称</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Mid
                    </td>
                    <td>
                        @item.Password
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Phone
                    </td>
                    <td>
                        @item.Role
                    </td>
                    <td>
                        @item.DidNavigation.Dname
                    </td>
                    <td>
                        <a href="/Member/Edit?id=@item.Mid" class="btn btn-sm btn-outline-primary">修改</a>
                        <a href="/Member/Delete?id=@item.Mid" class="btn btn-sm btn-outline-danger"
                           onclick="return confirm('确定要删  @item.Mid - @item.Name 吗?');">删除</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
